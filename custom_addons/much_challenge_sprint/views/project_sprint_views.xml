<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Sprint Tree View -->
    <record id="view_project_sprint_tree" model="ir.ui.view">
        <field name="name">project.sprint.tree</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <tree string="Sprints" 
                  decoration-info="state=='draft'" 
                  decoration-success="state=='active'" 
                  decoration-muted="state in ('done','cancelled')">
                <field name="name"/>
                <field name="project_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration_days"/>
                <field name="task_count"/>
                <field name="progress" widget="progressbar"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-success="state=='active'"
                       decoration-danger="state=='cancelled'"
                       decoration-muted="state=='done'"/>
            </tree>
        </field>
    </record>

    <!-- Sprint Form View -->
    <record id="view_project_sprint_form" model="ir.ui.view">
        <field name="name">project.sprint.form</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <form string="Sprint">
                <header>
                    <button name="action_start" 
                            string="Start Sprint" 
                            type="object" 
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="oe_highlight"/>
                    <button name="action_complete" 
                            string="Complete Sprint" 
                            type="object" 
                            attrs="{'invisible': [('state', '!=', 'active')]}"
                            class="oe_highlight"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object" 
                            attrs="{'invisible': [('state', 'not in', ('draft', 'active'))]}"/>
                    <button name="action_draft" 
                            string="Reset to Draft" 
                            type="object" 
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,active,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-tasks">
                            <field name="task_count" widget="statinfo" string="Tasks"/>
                        </button>
                        <button name="action_add_existing_tasks"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-plus-circle"
                                attrs="{'invisible': [('project_id', '=', False)]}">
                            <field name="backlog_task_count" widget="statinfo" string="Backlog"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Sprint 1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="project_id" required="1"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="goal" placeholder="What will the team achieve in this sprint?"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration_days"/>
                            <field name="days_remaining" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <div class="mb-3">
                                <button name="action_add_existing_tasks" 
                                        type="object" 
                                        string="+ Add Existing Tasks" 
                                        class="btn btn-secondary"
                                        attrs="{'invisible': [('project_id', '=', False)]}"/>
                            </div>
                            <field name="task_ids">
                                <tree editable="bottom">
                                    <field name="priority" widget="priority"/>
                                    <field name="name"/>
                                    <field name="story_points"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="date_deadline"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Metrics" name="metrics">
                            <group>
                                <group string="Progress">
                                    <field name="task_count"/>
                                    <field name="completed_task_count"/>
                                    <field name="progress" widget="progressbar"/>
                                </group>
                                <group string="Story Points">
                                    <field name="story_points_total"/>
                                    <field name="story_points_completed"/>
                                    <field name="velocity" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Sprint Kanban View -->
    <record id="view_project_sprint_kanban" model="ir.ui.view">
        <field name="name">project.sprint.kanban</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="project_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="task_count"/>
                <field name="progress"/>
                <field name="user_id"/>
                <field name="color"/>
                <field name="days_remaining"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{kanban_color(record.color.raw_value)}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" 
                                           data-bs-toggle="dropdown" href="#" title="Actions">
                                            <span class="fa fa-ellipsis-v" title="Menu"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a t-if="widget.editable" role="menuitem" 
                                               type="edit" class="dropdown-item">Edit</a>
                                            <a t-if="widget.deletable" role="menuitem" 
                                               type="delete" class="dropdown-item">Delete</a>
                                            <ul class="oe_kanban_colorpicker" 
                                                data-field="color"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="project_id" class="text-muted"/>
                                    <div class="mt-1">
                                        <span t-if="record.state.raw_value == 'draft'" 
                                              class="badge rounded-pill text-bg-secondary">Draft</span>
                                        <span t-if="record.state.raw_value == 'active'" 
                                              class="badge rounded-pill text-bg-success">Active</span>
                                        <span t-if="record.state.raw_value == 'done'" 
                                              class="badge rounded-pill text-bg-info">Done</span>
                                        <span t-if="record.state.raw_value == 'cancelled'" 
                                              class="badge rounded-pill text-bg-danger">Cancelled</span>
                                    </div>
                                    <div class="mt-2" t-if="record.state.raw_value == 'active'">
                                        <span class="text-muted" title="Days Remaining">
                                            <i class="fa fa-clock-o" title="Time"/> 
                                            <field name="days_remaining"/> days left
                                        </span>
                                    </div>
                                    <div class="mt-2">
                                        <field name="progress" widget="progressbar"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge text-bg-secondary" title="Task Count">
                                            <i class="fa fa-tasks" title="Tasks"/> <field name="task_count"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sprint Calendar View -->
    <record id="view_project_sprint_calendar" model="ir.ui.view">
        <field name="name">project.sprint.calendar</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <calendar string="Sprints" 
                      date_start="start_date" 
                      date_stop="end_date" 
                      color="project_id" 
                      mode="month">
                <field name="name"/>
                <field name="project_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Sprint Search View -->
    <record id="view_project_sprint_search" model="ir.ui.view">
        <field name="name">project.sprint.search</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <search string="Search Sprints">
                <field name="name"/>
                <field name="project_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Active" name="active" domain="[('state','=','active')]"/>
                <filter string="Completed" name="done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <separator/>
                <filter string="My Sprints" name="my_sprints" domain="[('user_id','=',uid)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Scrum Master" name="group_user" context="{'group_by':'user_id'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by':'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sprint Action -->
    <record id="action_project_sprint" model="ir.actions.act_window">
        <field name="name">Sprints</field>
        <field name="res_model">project.sprint</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="context">{'search_default_draft': 1, 'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Sprint
            </p>
            <p>
                Sprints help you organize tasks into time-boxed iterations.
                Click the create button to start planning your first sprint.
            </p>
        </field>
    </record>

</odoo>