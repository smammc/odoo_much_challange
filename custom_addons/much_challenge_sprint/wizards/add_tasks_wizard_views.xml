<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Add Tasks Wizard Form View -->
    <record id="view_sprint_add_tasks_wizard_form" model="ir.ui.view">
        <field name="name">sprint.add.tasks.wizard.form</field>
        <field name="model">sprint.add.tasks.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Tasks to Sprint">
                <group>
                    <group>
                        <field name="sprint_id" readonly="1"/>
                        <field name="project_id" readonly="1"/>
                    </group>
                </group>
                <separator string="Select Tasks from Backlog"/>
                <field name="available_task_ids" invisible="1"/>
                <field name="task_ids" widget="many2many" options="{'no_create': True}">
                    <tree>
                        <field name="priority" widget="priority"/>
                        <field name="name"/>
                        <field name="story_points"/>
                        <field name="user_ids" widget="many2many_avatar_user"/>
                        <field name="date_deadline"/>
                        <field name="stage_id"/>
                    </tree>
                </field>
                <footer>
                    <button name="action_add_tasks" 
                            string="Add Selected Tasks" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_sprint_add_tasks_wizard" model="ir.actions.act_window">
        <field name="name">Add Existing Tasks</field>
        <field name="res_model">sprint.add.tasks.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>